<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name) , html: { class: "form-signin"}) do |f| %>
	<div class="form-label-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" placeholder: "Username", class: "form-control" %>
		<%= f.label :email %>
	</div>

	<div class="form-label-group">
    <%= f.password_field :password, autocomplete: "off" placeholder: "Password", class: "form-control" %>
		<%= f.label :password %>
	</div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
