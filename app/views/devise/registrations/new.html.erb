<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signup"}) do |f| %>
  <div class="form-label-group">
		<%= render "devise/shared/error_messages", resource: resource %>
	</div>

	<div class="text-center mb-4"></div>

  <div class="form-label-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control" %>
		<%= f.label :email %><br />
  </div>

  <div class="form-label-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
		<%= f.label :password %>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: "form-control" %>
		<%= f.label :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<div class="text-center mb-4">
	<%= render "devise/shared/links" %>
</div>